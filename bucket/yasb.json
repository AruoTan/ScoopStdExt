            "hash": "b3e5a0b954339a8ef111e9b8693f8eb28faa464c9d81e55d1aff454d3f435529"
        }
    },
    "shortcuts": [
        [
            "yasb.exe",
            "YASB"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-win64.msi"
            }
        },
        "hash": {
            "url": "$baseurl/checksums.txt"
        }
