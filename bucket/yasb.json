    "post_install": [
        "$yasb_root = \"$dir\".Replace('\\', '\\\\')",
        "'yasb-no-console.exe', 'yasb-no-console.vbs' | ForEach-Object {",
        "    $obj = \"$bucketsdir\\std-ext\\scripts\\yasb\\$_\"",
        "    Copy-Item $obj -Destination $dir",
        "}"
    ],
    "bin": [
        "yasb.exe",
        "yasbc.exe",
        "yasb_themes.exe",
        "yasb-no-console.exe"
    ]
