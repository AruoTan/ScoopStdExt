            "hash": "edffde812a56224a2c2f1e5295fbf20b220972d2225312a0b370797e500c6448"
        }
    },
    "shortcuts": [
        [
            "yasb.exe",
            "YASB"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-win64.msi"
            }
        },
        "hash": {
