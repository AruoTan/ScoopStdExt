    "env_set": {
        "YASB_CONFIG_HOME": "$persist_dir"
    },
    "pre_install": [
        "$scriptsdir = \"$bucketsdir\\$bucket\\scripts\\$app\"",
        "'yasb-no-console.exe', 'yasb-no-console.vbs' | ForEach-Object {",
        "    $obj = \"$scriptsdir\\$_\"",
        "    Copy-Item $obj -Destination $dir",
        "}"
    ],
    "bin": [
        "yasb.exe",
        "yasbc.exe",
        "yasb_themes.exe",
        "yasb-no-console.exe"
    ]
}
